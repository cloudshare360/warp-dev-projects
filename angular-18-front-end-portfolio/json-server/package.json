{
  "name": "portfolio-json-server",
  "version": "1.0.0",
  "description": "JSON Server for Portfolio Website Data Management",
  "main": "server.js",
  "scripts": {
    "start": "json-server --watch data/db.json --port 3000 --host localhost",
    "start:prod": "json-server --watch data/db.json --port 3000 --host 0.0.0.0",
    "dev": "nodemon --exec json-server --watch data/db.json --port 3000",
    "setup": "node scripts/setup.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "validate": "node scripts/validate.js",
    "test": "node scripts/test.js",
    "reset": "node scripts/reset.js"
  },
  "keywords": [
    "portfolio",
    "json-server",
    "api",
    "mock-data"
  ],
  "author": "Solution Architect",
  "license": "MIT",
  "dependencies": {
    "json-server": "^1.0.0-alpha.23",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1"
  },
  "repository": {
    "type": "git",
    "url": "local"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}