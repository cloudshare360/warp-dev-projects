  "license": "MIT",
  "dependencies": {
    "swagger-ui-dist": "^5.9.0",
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "fs-extra": "^11.1.1",
    "axios": "^1.5.0",
    "chalk": "^4.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}