{
  "name": "portfolio-swagger-ui",
  "version": "1.0.0",
  "description": "Standalone Swagger UI documentation for Portfolio REST API",
  "main": "index.js",
  "scripts": {
    "start": "http-server dist -p 3002 -c-1 --cors",
    "dev": "http-server dist -p 3002 -c-1 --cors",
    "build": "node scripts/build.js",
    "serve": "npm run build && npm start",
