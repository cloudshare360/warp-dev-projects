# Express API Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# JSON Server Configuration
JSON_SERVER_URL=http://localhost:3001
JSON_SERVER_TIMEOUT=5000

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# API Configuration
API_PREFIX=/api/v1
API_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=Portfolio REST API
SWAGGER_DESCRIPTION=Comprehensive REST API for portfolio website
SWAGGER_CONTACT_NAME=Sri Ramanujam
SWAGGER_CONTACT_EMAIL=sri.ramanujam@example.com
SWAGGER_CONTACT_URL=https://sri-architect.com

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300